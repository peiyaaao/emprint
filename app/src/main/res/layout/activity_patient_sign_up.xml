<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/patient"/>
        <TextView
            android:id="@+id/patient_title"
            android:layout_height="80dp"
            android:layout_width="150dp"
            android:layout_marginTop="125dp"
            android:background="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#9dcecc"
            android:text="@string/patient_signup_title" />
    </FrameLayout>

    <Spinner
        android:layout_gravity="center"
        android:id="@+id/patient-insurance-dropdown"
        android:layout_width="300dp"
        android:elevation="5dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:drawSelectorOnTop="true"
        android:background="@drawable/round_spinner"
        android:prompt="@string/insurance_placeholder"
        android:entries="@array/insuranceproviders"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_marginTop="80dp"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#edecec">
        </View>
        <TextView
            android:layout_width="50dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="#b2d9d7"
            android:text="OR"/>
        <View
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#edecec">
        </View>
    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:id="@+id/manualformbutton"
        android:background="@drawable/fill_manual_button_bg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:elevation="5dp"
        android:text="@string/manual_button"/>

</LinearLayout>