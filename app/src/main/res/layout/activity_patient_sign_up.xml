<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/patient_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/patient_signup_title" />

    <Spinner
        android:id="@+id/patient-insurance-dropdown"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/insurance_placeholder"
        android:entries="@array/insuranceproviders"
        android:layout_marginTop="100dp" />

    <View
        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/manualformbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:text="@string/manual_button"/>

</LinearLayout>