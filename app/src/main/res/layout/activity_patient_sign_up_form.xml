<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:clipToPadding="false"
        android:orientation="vertical">

        <LinearLayout
            android:elevation="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/hi"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:elevation="10dp"
                android:gravity="center"
                android:text="YOUR CONTACT INFO"
                android:textColor="#84b3b1"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FULL NAME"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATE"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_state"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZIP CODE"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COUNTRY"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form-country"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER LICENSE/STATE ID #"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form-license"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER LICENSE/STATE ID #"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form-license2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIRTHDAY"
                    android:textColor="#d5e4e5"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/form-birthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#8fd2ce" />
            </LinearLayout>

            <Button
                android:id="@+id/next_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/next_button_bg"
                android:text="Next > "
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>